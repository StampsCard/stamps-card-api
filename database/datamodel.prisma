type User {
  id: ID! @id
  username: String! @unique
  email: String! @unique
  password: String!
  firstName: String
  lastName: String
  fbToken: String
  igToken: String
  purchases: [Purchase!]!
  businesses: [Business!]!
  stampCards: [StampCard!]!
}

type BusinessType {
  id: ID! @id
  name: String! @unique
  description: String
}

type Business {
  id: ID! @id
  name: String! @unique
  category: BusinessType! @relation(link: INLINE)
  owner: User!
  stampCards: [StampCard!]!
}

type StampCard {
  id: ID! @id
  stamp_price: Float!
  total: Int! @default(value: 0)
  business: Business!
  purchases: [Purchase!]!
  discount: String!
}

type Purchase {
  id: ID! @id
  amount: Float!
  stamps: Int!
  user: User
  stampCard: StampCard!
  concept: String
  confirmedAt: DateTime
  cancelledAt: DateTime
}
